num1 = int(input("Enter your age : "))
if (num1 >= 18):
    print("Elegible")
else:
    print("Not Eligible")
----------------------------------------------------------------------------------------------------------------
num1 = int(input("Enter your age : "))


if(num1 > 0 and num1 <= 20):
    print("Value is between 1 to 20")
elif(num1 > 21 and num1 <= 50):
    print("Value is between 21 to 50")
elif(num1 > 51 and num1 <= 100):
    print("Value is between 51 to 100")
else:
    print("Value is out of range")
-----------------------------------------------------------------------------------------------------------------
age = int(input("enter the age :"))

sal = int(input("enter the salry :"))

if (age >= 18):
    print("your are eligible")
    
    if (sal >= 100000 and sal <= 150000):
        print(f"Your salary is {sal} your are elite")
    elif(sal >= 150000 and sal <= 200000):
        print(f"Your salary is {sal} your are silver")
    elif(sal >= 200000):
        print(f"Your salary is {sal} your are gold")
    else:
        print(f"Your salary is {sal} your are not eligible")
else:
    print("You are under age")
    
    if sal < 100000 and sal >= 50000:
        print(f"You are eligible for 50% access because your salary is {sal}")
    else:
        print("Your salary is below 1 Lakh you are not eligible")
