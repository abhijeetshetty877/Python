# Level 1: Base class
class BasicCalculator:
    def __init__(self):
        print("Enter two numbers:")
        self.a = int(input("Enter first number: "))
        self.b = int(input("Enter second number: "))
    
    def add(self):
        return self.a + self.b

    def subtract(self):
        return self.a - self.b


# Level 2: Derived class (inherits from BasicCalculator)
class ScientificCalculator(BasicCalculator):
    def multiply(self):
        return self.a * self.b

    def divide(self):
        if self.b == 0:
            return "Error: Cannot divide by zero!"
        return self.a / self.b


# Level 3: Further derived class (inherits from ScientificCalculator)
class ProgrammerCalculator(ScientificCalculator):
    def to_binary(self):
        return bin(self.a)

    def to_hex(self):
        return hex(self.a)


# Object of the final class (input is taken automatically)
pc = ProgrammerCalculator()

print("\nSelect operation:")
print("1. Add")
print("2. Subtract")
print("3. Multiply")
print("4. Divide")
print("5. Convert first number to Binary")
print("6. Convert first number to Hex")

choice = int(input("Enter choice (1-6): "))

# ----- Operation Handling -----
if choice == 1:
    print("Result:", pc.add())
elif choice == 2:
    print("Result:", pc.subtract())
elif choice == 3:
    print("Result:", pc.multiply())
elif choice == 4:
    print("Result:", pc.divide())
elif choice == 5:
    print("Binary:", pc.to_binary())
elif choice == 6:
    print("Hexadecimal:", pc.to_hex())
else:
    print("Invalid choice!")
