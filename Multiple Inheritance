class Account:
    def __init__(self):
        self.balance = 0

    def deposit(self, amount):
        if amount <= 0:
            print("‚ùå Deposit amount must be positive!")
            return

        self.balance += amount
        print(f"‚úÖ Deposited ‚Çπ{amount}. Current Balance: ‚Çπ{self.balance}")

    def withdraw(self, amount):
        if amount <= 0:
            print("‚ùå Withdrawal amount must be positive!")
            return

        if amount > self.balance:
            print("‚ùå Insufficient balance!")
            return

        self.balance -= amount
        print(f"‚úÖ Withdrawn ‚Çπ{amount}. Current Balance: ‚Çπ{self.balance}")


class Loan:
    def __init__(self):
        self.loan_amount = 0
        self.is_approved = False

    def apply_loan(self, amount):
        if amount < 10000:
            print("‚ùå Minimum loan amount must be ‚Çπ10,000 or more!")
            return
        
        self.loan_amount = amount
        self.is_approved = True
        self.balance += amount   # loan increases balance

        print(f"‚úÖ Loan of ‚Çπ{amount} approved and credited to your account.")
        print(f"üí∞ Updated Balance: ‚Çπ{self.balance}")

    def loan_status(self):
        if self.is_approved:
            print(f"üìå Loan Status: Approved (Amount: ‚Çπ{self.loan_amount})")
        else:
            print("üìå Loan Status: Not Approved")


# ---------------------------
# MULTIPLE INHERITANCE
# ---------------------------
class Customer(Account, Loan):
    def __init__(self, name):
        self.name = name
        
        # Call constructors of both base classes
        Account.__init__(self)
        Loan.__init__(self)

    def customer_details(self):
        print(f"üë§ Customer Name: {self.name}")
        print(f"üí∞ Balance: ‚Çπ{self.balance}")
        print(f"üè¶ Loan Approved: {self.is_approved}")


# ---------------------------
# TESTING
# ---------------------------
c = Customer("Rahul")

print("\n--- Customer Details ---")
c.customer_details()

print("\n--- Banking Operations ---")
c.deposit(5000)
c.withdraw(2000)
c.withdraw(4000)   # insufficient balance test

print("\n--- Loan Operations ---")
c.apply_loan(8000)   # too small (fails)
c.apply_loan(150000)
c.loan_status()

print("\n--- Updated Customer Details ---")
c.customer_details()
